generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String   @id @default(uuid())
  email      String   @unique
  phone      String   @unique
  name       String
  password   String
  created_at DateTime @default(now())

  @@map("users")
  Companies Companies[]
}

model Companies {
  id         String   @id @default(uuid())
  name       String   @unique
  createBy   String
  created_at DateTime @default(now())
  users      Users    @relation(fields: [createBy], references: [id])

  @@map("companies")
}

model Permissions {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())

  @@map("permissions")
}
